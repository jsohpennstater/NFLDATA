
<h2> <%= @player.first_name %> <%= @player.last_name %>   </h2>
<ul>
  <li><h3>Years Pro: <%=@player.years_pro%></h3></li>
  <li><h3><%=@player.college%></h3></li>
</ul>

<h2> Player Total Stat </h2>
  <% passingyds = 0 %>
  <% passingtds = 0 %>

  <% receivingyds = 0 %>
  <% receivingtds = 0 %>

  <% rushingyds = 0 %>
  <% rushingtds = 0 %>


  <h4>Total Stat: Passing
    <% @stats.each do |stat| %>
      <% if stat.stat_type == "passing" %>
        <%passingyds += stat.yds %>
        <%passingtds += stat.tds %>
      <% end %>
    <% end %>
  <li> Passing Yards: <%= passingyds %> </li>
  <li> Passing Touchdowns: <%= passingtds %> </li>
</h4>

  <h4>Total Stat: Receiving
    <% @stats.each do |stat| %>
      <% if stat.stat_type == "receiving" %>
        <%receivingyds += stat.yds %>
        <%receivingtds += stat.tds %>
      <% end %>
    <% end %>
  <li> Receiving Yards: <%= receivingyds %> </li>
  <li> Receiving Touchdowns: <%= receivingtds %> </li>
</h4>

  <h4>Total Stat: Rushing
    <% @stats.each do |stat| %>
      <% if stat.stat_type == "rushing" %>
        <%rushingyds += stat.yds %>
        <%rushingtds += stat.tds %>
      <% end %>
    <% end %>
    <li> Rushing Yards: <%= rushingyds %> </li>
    <li> Rushing Touchdowns: <%= rushingtds %> </li>
  </h4>

  <h4> Game Stats </h4>
  <div>
  <% @stats.each do |stat| %>
    <% game = Game.find_by(matchup_number: stat.matchup_number) %>
      <% if !game.nil? %>
        <%= game.season_type %>(<%= game.year %>, Week <%= game.week %>, <%= game.wday %>) @<%=game.home_team %> vs <%= game.away_team %> <br>
        Stat Type: <%= stat.stat_type %> <br>
        Att: <%= stat.att %> <br>
        Comp: <%= stat.cmp %> <br>
        Yards: <%= stat.yds %> <br>
        Touchdowns: <%= stat.tds %> <br>
        Long: <%= stat.lng %> <br>
        Turnovers: <%= stat.turn_overs %> <br>
        <br>
        <br>
      <% end %>
  <% end %>
  </div>
<%= link_to 'Back to players', players_path %>

</div>
